{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Opti-Manage",
  "version": "0.1.0",
  "identifier": "opti.manage.desktop",
  "build": {
  "beforeBuildCommand": "start /min ..\\dist\\run_django.exe",
  "beforeDevCommand": ""
},

  "app": {
    "withGlobalTauri": true,
    "windows": [
  {
    "url": "http://127.0.0.1:8000",
    "title": "Opti-Manage Desktop",
    "width": 1024,
    "height": 768,
    "resizable": true
  }
]
,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
